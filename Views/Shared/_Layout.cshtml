<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deeplay_EnterprisePersonnelAccounting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        ul { padding: 0; }
        li { list-style: none; }
        li ul { padding-left: 120px; }
        li span.caption { width: 120px; display: inline-block; font-weight: bold; }
        input[type=text], select  { width: 400px; }
        div.block:first-child { border-top: none; }
        div.block { border-top: 1px solid #CCC; padding-bottom: 10px; }
        ul.list li { list-style: circle; }
        h2 { font-size: 1.25rem; }

        input[type=text], input[type=date], button, select, a.btn {
            background-color: #FFFFFF;
            box-sizing: border-box;
            color: #111827;
            border: 1px solid rgb(209,213,219);
            border-radius: .5rem;
            font-family: "Inter var",ui-sans-serif,system-ui,-apple-system,system-ui,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
            font-size: .875rem;
            font-weight: 600;
            line-height: 1.25rem;
            padding: .75rem 1rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            margin-bottom: 3px;
            margin-right: 5px;
        }

        button, a.btn { 
            text-align: center;
            text-decoration: none #D1D5DB solid;
            text-decoration-thickness: auto;
            cursor: pointer;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

        button:hover, a.btn:hover {
            background-color: rgb(240,240,240);
        }

        button:focus {
            outline: 2px solid transparent;
            outline-offset: 2px;
        }

        button:focus-visible {
            box-shadow: none;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="Search">Enterprise Personnel Accounting</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Enterprise personnel accounting service for deeplay
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
